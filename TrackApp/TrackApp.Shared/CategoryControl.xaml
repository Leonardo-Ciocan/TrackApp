<UserControl
    x:Class="TrackApp.CategoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrackApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="150" Height="100" Margin="5">
    
    <Grid Background="#FFDEDEDE">
    	<Rectangle Fill="#FFFF4600" Margin="0,0,0,34" StrokeThickness="0"/>
    	<TextBlock HorizontalAlignment="Center" Margin="0,0,0,2" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Bottom" FontSize="20" FontFamily="Segoe UI" FontWeight="Light" Foreground="#FF3C3C3C"/>

    </Grid>
</UserControl>
